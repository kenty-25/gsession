<Server port="-1" shutdown="SHUTDOWN">
    <!-- 他の設定 -->
    
    <Service name="Catalina">
        
        <!-- AJP設定を有効化 -->
        <Connector protocol="AJP/1.3"
                   address="0.0.0.0"
                   port="8009"
                   redirectPort="8443"
                   secretRequired="false"/>
        
        <!-- HTTP/1.1の設定 -->
        <Connector port="8080" protocol="HTTP/1.1"
                   connectionTimeout="20000"
                   redirectPort="8443" />
        
        <!-- WebSocket用の設定 -->
        <Connector port="8080" protocol="HTTP/1.1"
                   connectionTimeout="20000"
                   redirectPort="8443" 
                   upgradeProtocols="websocket" />
    </Service>
</Server>
